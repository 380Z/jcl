!ifndef ROOT
ROOT = $(MAKEDIR)\..
!endif
#---------------------------------------------------------------------------------------------------
SRC = ..\..\..\source
LIB = ..\..\..\lib\d7;..\..\..\lib\d6;..\..\..\lib\d5
SRCs = $(SRC)\common;$(SRC)\windows
RES = 
BIN = ..\..\..\bin
MAP = $(BIN)\$&.map
DRC = $&.drc
